<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_output"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ailynx.pekatala.activity.OutputActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hasil"
                android:textColor="@android:color/primary_text_light"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                />
            <TextView
                android:id="@+id/text_hasil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Baik."
                android:textSize="32sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saran"
                android:textColor="@android:color/primary_text_light"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                />
            <TextView
                android:id="@+id/text_saran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\t\tLorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."
                android:layout_marginBottom="16dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jawaban yang dipilih"
                android:textColor="@android:color/primary_text_light"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/box_border_bottom"
                android:padding="16dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salinitas"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    />
                <TextView
                    android:id="@+id/tv_jawaban_salinitas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="null"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/box_border_bottom"
                android:padding="16dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kecerahan"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    />
                <TextView
                    android:id="@+id/tv_jawaban_kecerahan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="null"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/box_border_bottom"
                android:padding="16dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Suhu"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    />
                <TextView
                    android:id="@+id/tv_jawaban_suhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="null"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/box_border_bottom"
                android:padding="16dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kedalaman"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    />
                <TextView
                    android:id="@+id/tv_jawaban_kedalaman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="null"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/box_border_bottom"
                android:padding="16dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kecepatan Arus"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    />
                <TextView
                    android:id="@+id/tv_jawaban_kecepatanarus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="null"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/box_border_bottom"
                android:padding="16dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Substrat Dasar Pantai"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    />
                <TextView
                    android:id="@+id/tv_jawaban_substratdasarpantai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="null"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/box_border_bottom"
                android:padding="16dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keterjangkauan"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    />
                <TextView
                    android:id="@+id/tv_jawaban_keterjangkauan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="null"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/box_border_bottom"
                android:padding="16dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keterlindungan"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    />
                <TextView
                    android:id="@+id/tv_jawaban_keterlindungan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="null"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/box_border_bottom"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pencemar"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    />
                <TextView
                    android:id="@+id/tv_jawaban_pencemar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="null"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/btn_output"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/box_accent"
                android:text="Kembali ke halaman awal"
                android:textColor="@android:color/primary_text_dark"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                />
        </LinearLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>
